<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="496dp"
            android:layout_margin="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="16dp"
                    android:text="Empezar a utilizar Videos teleSur"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Ahora puedes disfrutar de nuestro contenido en video, solo debes selecciónar la categoria de tu interés."
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Encontrarás más en la sección de Programas."
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_see_video" />-->


                <Button
                    android:id="@+id/btn_see_now"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="@dimen/item_type_four_top_see_now"
                    android:background="#303F9F"
                    android:text="EXPLORAR"
                    android:textColor="@color/white" />
            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7">


        <net.telesurtv.www.telesur.views.view.AutofitRecyclerView
            android:id="@+id/video_menu_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/window_background"
            android:clipToPadding="false"
            android:columnWidth="300dp"
            android:padding="@dimen/padding_view_pager" />


    </LinearLayout>


</LinearLayout>