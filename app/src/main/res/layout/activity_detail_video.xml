<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
   >

    <com.github.pedrovgs.DraggableView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:draggable_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pruebas_draggable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        draggable_view:top_view_id="@+id/pruebas_video_view"
        draggable_view:bottom_view_id="@+id/iv_thumbnail"
        draggable_view:top_view_x_scale_factor="2.3"
        draggable_view:top_view_y_scale_factor="2.3"
        draggable_view:top_view_height="200dip"
        draggable_view:top_view_margin_right="10dip"
        draggable_view:top_view_margin_bottom="10dip"
        draggable_view:enable_minimized_horizontal_alpha_effect="false"
        draggable_view:top_view_resize="true"
        android:background="@color/black">

        <VideoView
            android:id="@+id/pruebas_video_view"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"/>

    </com.github.pedrovgs.DraggableView>

    <!-- 320 dp-->
</FrameLayout>
