<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Selector.VideoItem"
    android:paddingRight="@dimen/video_item_padding_horizontal"
    android:paddingLeft="@dimen/video_item_padding_horizontal"
    android:paddingTop="@dimen/video_item_padding_vertical"
    android:paddingBottom="@dimen/video_item_padding_vertical"
    android:orientation="horizontal">


    <include
        layout="@layout/include_video_picture"
        android:layout_width="130dp"
        android:layout_height="75dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/placeholder_lorem_ipsum"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_title"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:text="@string/placeholder_lorem_ipsum"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_category"
            android:text="@string/placeholder_lorem_ipsum"
            android:maxLines="1"
            android:textSize="12sp" />


    </RelativeLayout>


</LinearLayout>