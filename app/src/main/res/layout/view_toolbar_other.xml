<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_bar_sub_header"
    android:gravity="center"
    android:background="@color/primary"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/header_padding"
    android:paddingRight="@dimen/header_padding"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/txt_sub_header_title"
        style="@style/Header.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="@string/placeholder_lorem_ipsum"
        tools:textColor="@color/white" />


    <TextView
        android:id="@+id/txt_sub_header_author"
        style="@style/Header.Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingTop="4dp"
        android:text="@string/placeholder_lorem_ipsum_short"
        tools:textColor="@color/white" />


</LinearLayout>

